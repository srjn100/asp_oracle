@model Berklee.Models.StudentModuleModel

@{
    ViewBag.Title = "MapStudentModule";
}

<h2>Add Student Module</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>StudentModuleModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.attendance, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.attendance, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.attendance, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class= "control-label col-md-2">Module</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.moduleCode, (List<SelectListItem>)ViewBag.Modules, new { @class = "form-control" })
                @*@Html.EditorFor(model => model.moduleCode, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.moduleCode, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.studentID)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
